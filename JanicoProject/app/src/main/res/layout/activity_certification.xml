<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    android:background="#ffffff"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!--타이틀바-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="#29bb9c"
            android:id="@+id/linearLayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-7dp">


            <ImageButton
                android:id="@+id/imgbtn_menu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:background="@drawable/menu_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="S-Travel"
                android:textStyle="normal"
                android:typeface="sans"
                android:textColor="#FFFF"
                android:textSize="9pt" />

        </LinearLayout>

        <!--입력부분-->

        <!--이름입력-->
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="201dp"
            android:textColorHint="#000000"
            android:textSize="18sp"
            android:hint="Input your name"
            android:id="@+id/nameinput"
            android:textColor="#000000"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <!--날짜입력-->
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="201dp"
            android:textColorHint="#000000"
            android:textSize="18sp"
            android:hint="Input date"
            android:id="@+id/dateinput"
            android:textColor="#000000"
            android:layout_marginTop="51dp"
            app:layout_constraintTop_toBottomOf="@+id/nameinput" />

        <!--코스입력-->
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="201dp"
            android:textColorHint="#000000"
            android:textSize="18sp"
            android:hint="Input course"
            android:id="@+id/courseinput"
            android:textColor="#000000"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/dateinput" />

        <!--이름-->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Input your name : "
            app:layout_constraintRight_toLeftOf="@+id/nameinput"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toTopOf="@+id/date" />

        <!--날짜-->

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Input date : "
            app:layout_constraintRight_toLeftOf="@+id/dateinput"
            android:layout_marginRight="65dp"
            android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toTopOf="@+id/course" />

        <!--코스-->

        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Input course : "
            tools:layout_editor_absoluteY="290dp"
            app:layout_constraintRight_toLeftOf="@+id/courseinput"
            android:layout_marginRight="45dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>