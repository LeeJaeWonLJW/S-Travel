<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="60dp"
            android:layout_marginTop="50dp"
            android:weightSum="1">

            <!--이름-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <!--이름-->
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:text="Input your name"
                    android:layout_marginRight="15dp" />

                <!--콜론-->
                <TextView
                    android:id="@+id/namecolon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text=":"/>

                <!--이름입력-->
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="#7b7a7a"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:hint="Input your name"
                    android:id="@+id/nameinput"
                    android:layout_marginLeft="13dp"/>

            </LinearLayout>

            <!--날짜-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <!--날짜-->
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_marginRight="15dp"
                    android:text="Input date"/>

                <!--콜론-->
                <TextView
                    android:id="@+id/datecolon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text=":"/>

                <!--날짜입력-->
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColorHint="#7b7a7a"
                    android:hint="Input date"
                    android:id="@+id/dateinput"
                    android:textColor="#000000"
                    android:layout_marginLeft="13dp"/>

            </LinearLayout>

            <!--코스-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!--코스-->
                <TextView
                    android:id="@+id/course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_marginRight="15dp"
                    android:text="Input course"/>

                <!--콜론-->
                <TextView
                    android:id="@+id/coursecolon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text=":"/>

                <!--코스입력-->
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="#7b7a7a"
                    android:textSize="20dp"
                    android:hint="Input course"
                    android:id="@+id/courseinput"
                    android:textColor="#000000"
                    android:layout_marginLeft="13dp"/>

            </LinearLayout>

            <!--버튼-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <!--확인-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Confirm"
                    android:id="@+id/confirm"/>

                <!--캡쳐-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Capture"
                    android:visibility="gone"
                    android:id="@+id/capture"/>

            </LinearLayout>

            <!--인증서-->
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/certificate"
                android:orientation="vertical"
                android:id="@+id/certification">

                <!--이름, 코스-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!--이름-->
                    <TextView
                        android:id="@+id/namename"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="70dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"/>

                    <!--코스-->
                    <TextView
                        android:id="@+id/coursecourse"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="70dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"/>

                </LinearLayout>

                <!--코스, 도장-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <!--날짜-->
                    <TextView
                        android:id="@+id/datedate"
                        android:layout_marginTop="32dp"
                        android:layout_marginLeft="64dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"/>

                    <!--도장-->
                    <ImageView
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="63dp"
                        android:layout_width="112dp"
                        android:layout_height="67dp"
                        android:src="@drawable/stravelstamp"
                        android:textColor="#000000"
                        android:layout_weight="0.09" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!--타이틀바-->
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="49dp"
        android:background="#29bb9c"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/menu_icon" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:background="@drawable/title" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/userinfo" />

    </RelativeLayout>

</RelativeLayout>